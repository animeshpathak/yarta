<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppActivity">
        <item name="android:background">#f9f9f9</item>
    </style>

    <style name="AppDialog">
        <item name="android:background">#f3f3f3</item>
    </style>

    <style name="AppWhiteButton">
        <item name="android:textColor">#555555</item>
        <item name="android:background">@drawable/white_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBlueButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppLoginButton" parent="AppBlueButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
    </style>

    <style name="AppLoginEdit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
    </style>

    <style name="AppActivityText">
        <item name="android:textColor">#555555</item>
    </style>

</resources>