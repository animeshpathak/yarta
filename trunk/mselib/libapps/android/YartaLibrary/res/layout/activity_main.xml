<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/nonet_frame"
        style="@style/AppContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:visibility="gone" >

        <Button
            android:id="@+id/retry"
            style="@style/AppCarrotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/retry_text"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/retry_text"
            android:onClick="onClickRetry"
            android:text="@string/main_retry" />

        <TextView
            android:id="@+id/retry_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/retry"
            android:text="@string/main_no_internet" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView
        android:id="@+id/listview_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/AppDrawerBackground"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:divider="@color/AppDrawerDivider"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>