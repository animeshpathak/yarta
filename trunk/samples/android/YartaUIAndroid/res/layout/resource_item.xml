<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:clickable="true"
>
    <ImageView
        android:contentDescription="@string/app_name"
    	android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:id="@+id/itemIcon"
    	android:layout_marginLeft="14dp"
    	android:paddingTop="5dp"
    	android:paddingBottom="5dp"
    	android:layout_centerVertical="true"
    />
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/itemIcon"
        android:layout_toLeftOf="@+id/itemMessage"
	>
	    <TextView
	    	android:textSize="14.0sp"
	    	android:id="@+id/itemTitle"
	    	android:textColor="#ffffff"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
	    />
	    
	    <TextView
	    	android:textSize="12.0sp"
	    	android:id="@+id/itemInfo"
	    	android:textColor="#ffffff"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="20dp"
	    	android:singleLine="true"
	    />
    </RelativeLayout>

    <Button
    	android:id="@+id/itemMessage"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@+id/itemUpdate"
    	android:layout_centerVertical="true"
    	android:text="@string/main_message"
    	android:layout_marginRight="10dip"
    	android:background="@drawable/buttonstates"
    	android:textColor="#ffffff"
    	android:visibility="gone"
    	android:textSize="12sp"
    />
    
    <Button
    	android:id="@+id/itemUpdate"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:text="@string/main_update"
    	android:layout_marginRight="14dip"
    	android:background="@drawable/buttonstates"
    	android:textColor="#ffffff"
    	android:visibility="gone"
    	android:textSize="12sp"
    />
    
    <CheckBox
        android:id="@+id/itemCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="14dip"
    	android:visibility="gone"
	/>
</RelativeLayout>
