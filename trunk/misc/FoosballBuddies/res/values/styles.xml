<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="ActivityNoTitleBar" parent="AppBaseTheme">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@color/AppBackground</item>
        <item name="android:background">@color/AppBackground</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/AppTitleBackground</item>
        <item name="android:background">@color/AppTitleBackground</item>
        <item name="android:icon">@drawable/icon_default</item>
        <item name="icon">@drawable/icon_default</item>
        <item name="titleTextStyle">@style/AppTitle</item>
    </style>

    <style name="AppTitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActivityTitle" parent="@style/AppContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#767471</item>
        <item name="android:background">#e0dfda</item>
    </style>

    <style name="AppCarrotButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_carrot</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppContainer">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppPlayerContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/oval</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppPlayerText">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>