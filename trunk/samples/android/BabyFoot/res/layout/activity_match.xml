<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppActivityBackground"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/table" />

    <LinearLayout
        style="@style/AppPlayerContainer"
        android:layout_alignLeft="@+id/table"
        android:layout_alignTop="@+id/table"
        android:onClick="onBlueDefense" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/player_blue" />

        <TextView
            android:id="@+id/blueD"
            style="@style/AppPlayerText"
            android:text="@string/match_tap_to_pick" />
    </LinearLayout>

    <LinearLayout
        style="@style/AppPlayerContainer"
        android:layout_alignBottom="@+id/table"
        android:layout_alignLeft="@+id/table"
        android:layout_marginBottom="26dp"
        android:onClick="onBlueOffense" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/player_blue" />

        <TextView
            android:id="@+id/blueO"
            style="@style/AppPlayerText"
            android:text="@string/match_tap_to_pick" />
    </LinearLayout>

    <LinearLayout
        style="@style/AppPlayerContainer"
        android:layout_alignRight="@+id/table"
        android:layout_alignTop="@+id/table"
        android:layout_marginTop="26dp"
        android:onClick="onRedOffense" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/player_red" />

        <TextView
            android:id="@+id/redO"
            style="@style/AppPlayerText"
            android:text="@string/match_tap_to_pick" />
    </LinearLayout>

    <LinearLayout
        style="@style/AppPlayerContainer"
        android:layout_alignBottom="@+id/table"
        android:layout_alignRight="@+id/table"
        android:onClick="onRedDefense" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/player_red" />

        <TextView
            android:id="@+id/redD"
            style="@style/AppPlayerText"
            android:text="@string/match_tap_to_pick" />
    </LinearLayout>

</RelativeLayout>