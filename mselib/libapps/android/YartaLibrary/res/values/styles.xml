<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.Sherlock">
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowBackground">@color/AppBackground</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="actionBarWidgetTheme">@style/PopupMenuStyle</item>
        <item name="android:actionBarWidgetTheme">@style/PopupMenuStyle</item>
        <item name="indeterminateProgressStyle">@style/AppProgressBar</item>
        <item name="android:indeterminateProgressStyle">@style/AppProgressBar</item>
        <item name="android:spinnerStyle">@style/Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:actionBarItemBackground">@drawable/selectable</item>
        <item name="actionBarItemBackground">@drawable/selectable</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
    </style>

    <style name="AppThemeDrawer" parent="AppTheme">
        <item name="homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
    </style>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/AppDialogTitle</item>
        <item name="android:windowBackground">@drawable/card_dialog</item>
        <item name="android:spinnerStyle">@style/Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="AppDialogNoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:windowBackground">@drawable/popupcontainer</item>
    </style>

    <style name="AppDialogTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/AppTitleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/AppTitleBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppProgressBar" parent="@android:style/Widget.Holo.ProgressBar">
        <item name="android:maxHeight">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="Spinner" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar"></style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:background">@color/AppContentColor</item>
        <item name="background">@color/AppContentColor</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.Sherlock.ListPopupWindow">
        <item name="android:textColor">@color/AppTitleTextColor</item>
        <item name="android:popupBackground">#84455a</item>
    </style>

    <style name="AppActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/AppTitleBackground</item>
        <item name="android:background">@color/AppTitleBackground</item>
        <item name="android:icon">@drawable/icon_default</item>
        <item name="icon">@drawable/icon_default</item>
        <item name="android:titleTextStyle">@style/AppTitle</item>
        <item name="titleTextStyle">@style/AppTitle</item>
        <item name="android:indeterminateProgressStyle">@style/AppProgressBar</item>
    </style>

    <style name="AppTitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/AppTitleTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppProgressBar" parent="@android:style/Widget.Holo.ProgressBar">
        <item name="android:maxHeight">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="AppThemeNoTitlebar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppEdit" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#1a1a1a</item>
        <item name="android:background">@drawable/edit</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="AppGrayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="AppCarrotButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_carrot</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/AppTitleTextColor</item>
    </style>

    <style name="AppAuthor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable</item>
    </style>

</resources>