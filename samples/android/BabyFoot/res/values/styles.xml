<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <item name="homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
        <item name="android:windowBackground">@color/AppActivityBackground</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="ActivityNoTitleBar" parent="AppBaseTheme">
        <item name="android:textColor">@color/AppTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/AppTitleBackground</item>
        <item name="android:background">@color/AppTitleBackground</item>
        <item name="android:icon">@drawable/icon_default</item>
        <item name="icon">@drawable/icon_default</item>
        <item name="android:titleTextStyle">@style/AppTitle</item>
        <item name="titleTextStyle">@style/AppTitle</item>
        <item name="indeterminateProgressStyle">@style/AppProgressBar</item>
        <item name="android:indeterminateProgressStyle">@style/AppProgressBar</item>
    </style>

    <style name="AppProgressBar" parent="@android:style/Widget.Holo.ProgressBar">
        <item name="android:maxHeight">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">32dp</item>
    </style>

    <style name="AppTitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActivityTitle" parent="@style/AppContainer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/ActivityTitleTextColor</item>
        <item name="android:background">@drawable/title_card</item>
    </style>

    <style name="AppCarrotButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_carrot</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppGrayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">#7e7e7e</item>
    </style>

    <style name="AppContainer">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppPlayerContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/oval</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppPlayerText">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/AppDialogTitle</item>
        <item name="android:background">#ECF0F1</item>
    </style>

    <style name="AppDialogTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/AppTitleBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppBlock">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

</resources>